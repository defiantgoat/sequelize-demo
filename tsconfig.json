{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "allowJs": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*.test.js"]
}
